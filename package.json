{
  "name": "cluemaster-timer",
  "private": true,
  "version": "2025.9.15-0",
  "type": "module",
  "author": "Cluemaster-LLC",
  "main": "electron/main.mjs",
  "description": "ClueMaster Media Display is a Dynamic TV Display software for escape rooms. It shows escape room countdown timers, visual text messages, video, audio, and photo clues. It also has the ability to reboot and shut down remotely",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron ./electron/main.mjs\"",
    "build": "vite build",
    "start": "electron ./electron/main.mjs"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "drivelist": "^12.0.2",
    "electron-store": "^10.1.0",
    "mime": "^4.0.7",
    "node-gyp": "^11.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "systeminformation": "^5.27.7",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.cluemaster.timer",
    "productName": "ClueMaster-Timer",
    "files": [
      "dist/**/**",
      "electron/main.mjs",
      "electron/preload.cjs",
      "src/backends/**",
      "src/workers/**",
      "src/screens/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/cluemaster.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "ClueMaster-Timer",
      "include": "build/installer.nsh"
    }
  }
}
