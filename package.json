{
  "name": "cluemaster-timer",
  "private": true,
  "version": "2026.2.2",
  "type": "module",
  "author": "Cluemaster-LLC",
  "main": "electron/main.mjs",
  "description": "ClueMaster Media Display is a Dynamic TV Display software for escape rooms. It shows escape room countdown timers, visual text messages, video, audio, and photo clues. It also has the ability to reboot and shut down remotely",
  "scripts": {
    "start": "electron ./electron/main.mjs",
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron ./electron/main.mjs\"",
    "build": "vite build",
    "build:dev": "node build-scripts/inject-env.mjs development && vite build --mode development",
    "build:prod": "node build-scripts/inject-env.mjs production && vite build --mode production",
    "cleanup-releases": "node build-scripts/cleanup-releases.mjs",
    "cleanup-releases:all": "node build-scripts/cleanup-releases.mjs ALL",
    "publish:dev": "npm run build:dev && electron-builder --win --x64 --publish always --config.appId=\"com.cluemaster.timer.dev\" --config.directories.output=\"dist-dev\" --config.publish.repo=\"TimerDisplay-Updates-Dev\" && node build-scripts/cleanup-releases.mjs TimerDisplay-Updates-Dev",
    "publish:prod": "npm run build:prod && electron-builder --win --x64 --publish always --config.appId=\"com.cluemaster.timer.prod\" --config.productName=\"ClueMaster-Timer-Display\" --config.directories.output=\"dist-prod\" --config.publish.repo=\"TimerDisplay-Updates\" && node build-scripts/cleanup-releases.mjs TimerDisplay-Updates",
    "package:dev": "npm run build:dev && electron-builder --win --x64 --publish never --config.appId=\"com.cluemaster.timer.dev\" --config.directories.output=\"dist-dev\"",
    "package:prod": "npm run build:prod && electron-builder --win --x64 --publish never --config.appId=\"com.cluemaster.timer.prod\" --config.productName=\"ClueMaster-Timer-Display\" --config.directories.output=\"dist-prod\"",
    "reset-env": "node build-scripts/reset-env.mjs",
    "update-ffmpeg": "node build-scripts/update-ffmpeg-win.mjs"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.8.3",
    "mime": "^4.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "systeminformation": "^5.31.1",
    "ws": "^8.19.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.2.0",
    "@tailwindcss/vite": "^4.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "electron": "^39.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.cluemaster.timer",
    "productName": "ClueMaster-Timer-Display-DEV",
    "artifactName": "${productName}-Setup.${ext}",
    "files": [
      "package.json",
      "dist/**/**",
      "electron/main.mjs",
      "electron/preload.cjs",
      "src/backends/**",
      "src/workers/**",
      "src/screens/**",
      "src/config/**"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/cluemaster.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerHeader": "build/cluemaster.ico",
      "installerHeaderIcon": "build/cluemaster.ico",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "ClueMaster-LLC",
      "repo": "TimerDisplay-Updates",
      "releaseType": "release"
    }
  }
}
