{
  "name": "cluemaster-timer",
  "private": true,
  "version": "2025.11.17",
  "type": "module",
  "author": "Cluemaster-LLC",
  "main": "electron/main.mjs",
  "description": "ClueMaster Media Display is a Dynamic TV Display software for escape rooms. It shows escape room countdown timers, visual text messages, video, audio, and photo clues. It also has the ability to reboot and shut down remotely",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron ./electron/main.mjs\"",
    "build": "vite build",
    "build:dev": "node build-scripts/inject-env.mjs development && vite build --mode development",
    "build:prod": "node build-scripts/inject-env.mjs production && vite build --mode production",
    "publish:dev": "npm run build:dev && electron-builder --win --x64 --publish always --config.appId=\"com.cluemaster.timer.dev\" --config.publish.repo=\"TimerDisplay-Updates-Dev\"",
    "publish:prod": "npm run build:prod && electron-builder --win --x64 --publish always --config.appId=\"com.cluemaster.timer.prod\" --config.productName=\"ClueMaster-Timer-Display\" --config.publish.repo=\"TimerDisplay-Updates\"",
    "package:dev": "npm run build:dev && electron-builder --win --x64 --publish never --config.appId=\"com.cluemaster.timer.dev\"",
    "package:prod": "npm run build:prod && electron-builder --win --x64 --publish never --config.appId=\"com.cluemaster.timer.prod\" --config.productName=\"ClueMaster-Timer-Display\"",
    "start": "electron ./electron/main.mjs"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "drivelist": "^12.0.2",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "mime": "^4.0.7",
    "node-gyp": "^11.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "systeminformation": "^5.27.7",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.8.30",
    "concurrently": "^9.2.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.cluemaster.timer",
    "productName": "ClueMaster-Timer-Display-DEV",
    "artifactName": "${productName}-Setup.${ext}",
    "files": [
      "package.json",
      "dist/**/**",
      "electron/main.mjs",
      "electron/preload.cjs",
      "src/backends/**",
      "src/workers/**",
      "src/screens/**",
      "src/config/**"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/cluemaster.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerHeader": "build/cluemaster.ico",
      "installerHeaderIcon": "build/cluemaster.ico",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "ClueMaster-LLC",
      "repo": "TimerDisplay-Updates",
      "releaseType": "release"
    }
  }
}
